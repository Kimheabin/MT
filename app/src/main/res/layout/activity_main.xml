<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/MetroTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metro Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/btn_kakaoLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:src="@drawable/kakao_login_medium_narrow"
        app:layout_constraintTop_toBottomOf="@id/MetroTime"
        app:layout_constraintBottom_toTopOf="@+id/btn_googleLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_googleLogin"
        android:layout_width="194dp"
        android:layout_height="44dp"
        android:text="구글 로그인"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btn_kakaoLogin"
        app:layout_constraintBottom_toTopOf="@+id/MetroTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>